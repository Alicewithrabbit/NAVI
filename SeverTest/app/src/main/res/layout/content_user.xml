<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@color/top_bg_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="alicewithrabbit.severtest.Activity.UserActivity"
    tools:showIn="@layout/app_bar_user">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/r1"
        android:layout_height="250dp"

        android:background="@drawable/s02_img3"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            android:id="@+id/imageView2"
            android:layout_centerVertical="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/r1"
        android:background="@drawable/news_bar"
        >

        <TextView
            android:layout_width="270dp"

            android:gravity="center_horizontal"
            android:layout_height="150dp"
            android:id="@+id/textView6"
            android:scrollbars="vertical"

            android:layout_marginStart="14dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="37dp" />

    </RelativeLayout>


</RelativeLayout>
