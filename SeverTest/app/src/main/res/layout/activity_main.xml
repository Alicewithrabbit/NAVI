<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:background="@color/top_bg_color"
    tools:context="alicewithrabbit.severtest.Activity.MainActivity">

    <include
        android:id="@+id/theader"
        layout="@layout/title_layout" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:gravity="center_horizontal"
        android:layout_height="280dp"
        android:background="@mipmap/kaitou"
        android:layout_below="@+id/theader"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/hintmessage"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:text="USER ID"
        android:textColor="@color/user_colour"
        android:layout_below="@+id/textView"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:layout_below="@+id/hintmessage"
        android:id="@+id/enter_account"
        />

    <TextView
        android:id="@+id/hintmessage2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:text="PASSWORD"
        android:textColor="@color/user_colour"
        android:layout_below="@+id/enter_account"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:inputType="textWebPassword"
        android:layout_below="@+id/hintmessage2"
        android:id="@+id/password_enter_account"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:background="@color/top_bg_color"
        android:layout_below="@+id/password_enter_account"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:textColor="@color/white"
        android:background="@color/top_bg_color"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
