<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/top_bg_color"
    >




    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/now_loading"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/nowloadingtx"
        android:layout_below="@+id/op"
        />

    <ImageView
        android:layout_marginTop="200dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@drawable/kaitou"
        android:id="@+id/op"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:textSize="10sp"
        android:text="Developed by Alicewithrabbit"
        android:textStyle="italic|bold"
        android:textColor="@color/white"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/textView3" />
    <ImageView
        android:layout_marginLeft="0dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/alicewithrabbit"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginBottom="20dp"
        />


</RelativeLayout>